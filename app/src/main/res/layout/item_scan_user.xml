<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/txt_user_scan_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:typeface="serif"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_centerVertical="true"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/imageview_user_scan_headportrait"
            android:layout_toEndOf="@+id/imageview_user_scan_headportrait" />

        <ImageView
            android:id="@+id/imageview_user_scan_headportrait"
            android:background="@drawable/contact_head_portrait"
            android:scaleType="fitXY"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="23dp"
            android:layout_alignTop="@+id/txt_user_scan_username"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="23dp" />

    </RelativeLayout>
</LinearLayout>
