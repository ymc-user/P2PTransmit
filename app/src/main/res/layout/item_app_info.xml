<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/imageview_applist_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:text="@string/package_name"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_applist_sourcepath"
            android:visibility="invisible"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_alignBottom="@+id/imageview_applist_icon"
            android:layout_toRightOf="@+id/imageview_applist_icon"
            android:layout_toEndOf="@+id/imageview_applist_icon" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_applist_appinfo"
            android:layout_alignBottom="@+id/txt_applist_sourcepath"
            android:layout_toRightOf="@+id/imageview_applist_icon"
            android:layout_toEndOf="@+id/imageview_applist_icon"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            android:id="@+id/txt_applist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            android:typeface="sans"
            android:textSize="20sp"
            android:layout_alignTop="@+id/imageview_applist_icon"
            android:layout_alignLeft="@+id/txt_applist_appinfo"
            android:layout_alignStart="@+id/txt_applist_appinfo" />
    </RelativeLayout>
</LinearLayout>
